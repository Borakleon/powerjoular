pkgname=powerjoular
pkgver=0.7.3
pkgrel=1
pkgdesc="PowerJoular allows monitoring power consumption of multiple platforms"
arch=('x86_64' 'aarch64' 'armv7h')
license=('GPL3')
source=("${pkgname}" "powerjoular.service")
md5sums=('SKIP' 'SKIP')

package() {
  install -Dm755 "${srcdir}/${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
  install -Dm644 "${srcdir}/powerjoular.service" "${pkgdir}/etc/systemd/system"
}


